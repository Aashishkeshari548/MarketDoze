<% layout('/layouts/boilerplate2') -%>

<body>
  <div class="row mt- 3">
    <div class="col-8 offset-3">
      <h3><b><%=listing.influencerName%></b></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
      <img
        src="<%=listing.image%>"
        class="card-img-top show-image"
        alt="Listing_image"
      />
      <div class="card-body">
      <p> <p class="card-text">
        </p> 
         <p><%=listing.description%> </p> 
         <p> &#8377;<%=listing.price.toLocaleString("en-IN")%> </p>
         <p><%=listing.country%> </p> 
         <p> <a href="<%=listing.instaUrl%>"><i class="fa-brands fa-square-instagram"></i><b><%=listing.influencerName%></b></a> </p>
         <p> <a href="<%=listing.youtubeUrl%>"><i class="fa-brands fa-youtube"></i><b><%=listing.influencerName%></b></a> </p> 
 
        </p>
      </div>
    </div>
    <br />
  
    <div class="btns">
      <a
        href="/listing2/request"
         class="btn btn-dark offset-3 edit-btn">Request for advertisements
      </a>
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <!-- <button class="btn btn-dark offset-5">Delete</button> -->
      </form>
    </div>
  
    <div class="col-8 offset-3 mb-3">
      <br />
      <hr />
      <h4>Leave a review</h4>
      <form
        method="POST"
        action="/listings/<%=listing._id%>/reviews"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Ratings</label>
          <input type="range" min="1" max="5" name="review[rating]"
          class="form-range " / >
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea
            required
            name="review[comment]"
            id="comment"
            cols="30"
            row="5"
            class="form-control"
          ></textarea>
          <div class="invalid-feedback">
            Please add some comments for review
          </div>
        </div>
        <button class="btn btn-outline-dark">Sumbit</button>
      </form>
      <hr />
      <div class="row">
        <p><b>All Reviews</b></p>
        <%for(review of listing.reviews){%>
        <div class="card col-6 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title">jane doe</h5>
            <p class="card-text"><%=review.comment%></p>
            <p class="card-text"><%=review.rating%>stars</p>
            <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
            <button class="btn btn-sm btn-dark mb-3">Delete</button></form>
          </div>
        </div>

        <%}%>
      </div>
    </div>
  </div>
</body>
